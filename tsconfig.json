  "compilerOptions": {
    "target": "es2016",                             
    "module": "es6",                              
    "esModuleInterop": true,  
    "moduleResolution": "node",    
    "allowSyntheticDefaultImports": true,        
    "strict": true,                                     
    "skipLibCheck": true, 
    "outDir": "out/"   
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
  ],    
}
